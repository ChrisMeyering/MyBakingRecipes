<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryLight"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_measure_quantity"/>
    <TextView
        android:id="@+id/tv_measure_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/tv_measure_unit"
        style="@android:style/TextAppearance.Material.Medium"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_measure_unit"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        style="@android:style/TextAppearance.Material.Small"
        android:paddingStart="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tv_measure_quantity"
        />
</RelativeLayout>